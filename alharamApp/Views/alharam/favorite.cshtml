@model List<alharamApp.Models.hotel>

@{
    ViewBag.Title = "favorite";
    Layout = "~/Views/Shared/_alharamLayout.cshtml";
}


<main id="main" data-aos="fade-in">

    <!-- ======= search about specific failites ======= -->
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" style="background-color:white">
        <div class="container">


            <section id="courses" class="courses">
                <div class="container" data-aos="fade-up">

                    <div class="row" data-aos="zoom-in" data-aos-delay="100">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                                <div class="course-item h-100">

                                    <img src="~/@item.hotelID" class="img-fluid" alt="One of makkah facilities">
                                    <div class="course-content">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                        </div>

                                        <h3><a href=@item.hotelLocation>@item.hotelName</a> <i class="bi bi-geo-alt"></i></h3>

                                        <div class="trainer d-flex justify-content-between align-items-center">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section><!-- End Courses Section -->


            </div>
        </div>
    </main><!-- End #main -->
